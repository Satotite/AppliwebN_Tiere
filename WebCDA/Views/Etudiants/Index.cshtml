@model IEnumerable<Models.Etudiant>

@{
    ViewData["Title"] = "Gestion des Elèves";
}

<h1>Gestion des élèves</h1>

<form asp-action="Index" method="get">
    <p>
        Nom: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Rechercher" />
    </p>
</form>

<p>
    <a asp-action="Create">Créer un nouvel élève</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>